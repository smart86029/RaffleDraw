<UserControl x:Class="RaffleDraw.Wpf.Views.ResultView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RaffleDraw.Wpf.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="300"
             DataContext="{Binding Source={StaticResource Locator}, Path=ResultViewModel}"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" MinWidth="200">
            <TextBlock Text="抽獎" />
            <Button Margin="5" HorizontalAlignment="Center" VerticalAlignment="Top" Command="{Binding ExportWinnerCommand}" Content="匯出" />
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Label Width="100" VerticalAlignment="Center" Content="獎項" />
            <ComboBox MinWidth="300" Margin="5" ItemsSource="{Binding Prizes}" SelectedItem="{Binding Prize}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Width="Auto" FontFamily="Consolas" Text="{Binding SerialNumber, StringFormat=\{0\,10\}}" />
                            <TextBlock Margin="10,0" Text=" | " />
                            <TextBlock Width="Auto" Text="{Binding Content}" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Label Width="100" VerticalAlignment="Center" Content="序號" />
            <TextBox Width="100" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Top" AcceptsReturn="False"
                     Text="{Binding SearchSerialNumber, UpdateSourceTrigger=PropertyChanged}">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding SearchEmployeeCommand}" />
                </TextBox.InputBindings>
            </TextBox>
            <Button HorizontalAlignment="Left" VerticalAlignment="Center" Command="{Binding SearchEmployeeCommand}" Content="搜尋" />
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Label Margin="0,0,20,0" VerticalAlignment="Center" Content="獎項" FontSize="24" />
            <Label Width="150" Content="{Binding Prize.SerialNumber}" FontSize="32" />
            <Label Margin="0,0,20,0" VerticalAlignment="Center" Content="數量" FontSize="24" />
            <Label Width="50" Content="{Binding Prize.Quentity}" FontSize="32" />
            <Label Margin="0,0,20,0" VerticalAlignment="Center" Content="已抽" FontSize="24" />
            <Label Width="50" Content="{Binding Prize.Winners.Count}" FontSize="32" />
            <Label Margin="0,0,20,0" VerticalAlignment="Center" Content="提供者" FontSize="24" />
            <Label Content="{Binding Prize.Provider}" FontSize="32" />
        </StackPanel>
        <Label Grid.Row="3" Content="{Binding Prize.Content}" FontSize="64" FontWeight="Bold" />
        <StackPanel Grid.Row="4" Orientation="Horizontal">
            <Label Margin="0,0,20,0" Content="{Binding Employee.SerialNumber}" FontSize="48" FontWeight="Bold" />
            <Label Margin="0,0,20,0" Content="{Binding Employee.Office}" FontSize="48" FontWeight="Bold" />
            <Label Margin="0,0,20,0" Content="{Binding Employee.Division}" FontSize="48" FontWeight="Bold" />
            <Label Margin="0,0,20,0" Content="{Binding Employee.Name}" FontSize="48" FontWeight="Bold" />
            <Button Margin="0,0,20,0" HorizontalAlignment="Left" VerticalAlignment="Center" Command="{Binding SaveWinnerCommand}" Content="儲存" />
            <Label VerticalAlignment="Center" Content="{Binding SaveWinnerMessage}" />
        </StackPanel>
        <ListView Grid.Row="5" ItemsSource="{Binding Prize.Winners}">
            <ListView.View>
                <GridView AllowsColumnReorder="true">
                    <GridViewColumn Width="100" DisplayMemberBinding="{Binding Path=SerialNumber}" Header="序號" />
                    <GridViewColumn Width="100" DisplayMemberBinding="{Binding Path=Office}" Header="一級單位" />
                    <GridViewColumn Width="100" DisplayMemberBinding="{Binding Path=Division}" Header="二級單位" />
                    <GridViewColumn Width="100" DisplayMemberBinding="{Binding Path=EmployeeID}" Header="員工代號" />
                    <GridViewColumn Width="200" DisplayMemberBinding="{Binding Path=Name}" Header="姓名" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
